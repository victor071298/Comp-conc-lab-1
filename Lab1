#include<stdio.h>
#include<pthread.h>
#include<stdlib.h>
int vetor[10000]; 

void * potencia (void * arg){
    int id=*(int*)arg;
    if(id==1){
        for(int i=0;i<5000;i++){
            vetor[i]=vetor[i]*vetor[i];
        }
    }
    else{
        for(int i=50;i<10000;i++){
            vetor[i]=vetor[i]*vetor[i];
        }
    }
    pthread_exit(NULL);
    }
    

int main(void){
    pthread_t tid[2]; 
    int id[2];
    for(int i=0;i<10000;i++){
        vetor[i]=i;
    }
    
    for(int i=0;i<2;i++){
        id[i]=i+1;
        if (pthread_create(&tid[i], NULL, potencia, (void*)&id[i])){
            printf("--ERRO: pthread_create()\n"); exit(-1);
        }
    }
   
    for(int i=0;i<2;i++){
        if (pthread_join(tid[i], NULL)){
            printf("--ERRO: pthread_join()\n"); exit(-1);
        }
    }

    for(int i=1;i<=10000;i++){
        printf("%d valor : %d\n", i , vetor[i-1]);
    }
    return 0;
}
